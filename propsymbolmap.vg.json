{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text": "Sales by Country of Origin"},
  "width": 600,
  "height": 600,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/world-map.json", // MAP DATA GOES HERE
        "format": {"type": "json", "property": "features"}
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
    "data": {
    "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/testdatamake.csv",
    "format": {"type": "csv"}
  },
      "params": [
    {
      "name": "selectedYear",
      "value": 2025,
      "bind": {
        "input": "range", "min": 2020, "max": 2025, "step": 1
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == selectedYear"}
  ],
      "projection": {
        "type": "equalEarth" 
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "lng",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "size": {"field": "Sales", "type": "quantitative"},
        "color": {"value": "#0845FF1A"}
      }
    }
  ]
}