{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text": "Australian Car Since 2020"},
  "width": "container",
  "height": "container",
  "data": {"url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/states.csv", "format": {"type": "csv"}},
  "mark": {
    "type": "line",
    "point": {
      "filled": false,
      "fill": "white"
    }
  },
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year", "axis": {
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14
      }},
    "y": {"field": "Sales", "type": "quantitative", "aggregate": "sum", "title": "Total Sales", "axis": {
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14
      }},
    "tooltip": [
        {"field": "Year", "type": "quantitative", "title": "Year"},
        {"field": "Sales", "type": "quantitative", "aggregate": "sum", "title": "Total Sales", "format": ","}
      ]
  }
}