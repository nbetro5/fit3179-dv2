{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "New Car Sales by State in Australia",
  "width": 600,
  "height": 600,
  
  "params": [
    {
      "name": "selectedYear",
      "value": 2025,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2025,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ],

  "projection": {
    "type": "albers",
    "rotate": [-132.8906, 0, 0],
    "center": [0, -27.4422],
    "parallels": [-39.2069, -15.6778],
    "scale": 1000
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/australian-states.json",
        "format": {"type": "json", "property": "features"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/testdatastate.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/australian-states.json",
              "format": {"type": "json", "property": "features"}
            },
            "key": "properties.STATE_NAME",
            "fields": ["geometry"]
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == selectedYear"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#000000", "strokeWidth": 1},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Per10000",
          "type": "quantitative",
          "title": "Sales per 10000 People",
          "scale": {"range": ["#edf8e9","#bae4b3","#74c476","#31a354","#006d2c"]},
        "legend":{
        "title": "Sales per 10000 People",
        "titleFont": "Arial",
        "titleFontSize": 14,
        "labelFont": "Arial",
        "labelFontSize": 10,
        "format": ".2s"}
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Per10000", "type": "quantitative", "title": "Sales per 10000 People"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ]
}
