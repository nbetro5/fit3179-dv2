{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "A simple donut chart with embedded data.",
  "title": "Where do Australians' New Cars Come From? (2015 vs 2024)",
  "autosize": {"type": "fit", "contains": "padding"},
  "background": "#EDE8D0",
  "view": {"fill": "transparent"},
  "data": {
    "url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/countrydonut.csv", "format": {"type": "csv"}
  },
  "hconcat":[
  {

    "mark": {"type": "arc", "innerRadius": 50, "tooltip": true},
  "encoding": {
    "theta": {"field": "2015Share", "type": "quantitative"},
    "color": {"field": "2015Country", "type": "nominal", "legend":{
        "title": "Country of Origin",
        "titleFont": "Arial",
        "titleFontSize": 14,
        "labelFont": "Arial",
        "labelFontSize": 10}
    },
    "tooltip": [
          {"field": "2015Country", "type": "nominal", "title": "Country"},
          {"field": "2015Share", "type": "quantitative", "title": "% of Total Sales"}
        ]
  }
},
  {
  "mark": {"type": "arc", "innerRadius": 50, "tooltip": true},
  "encoding": {
  "theta": {"field": "2024Share", "type": "quantitative"},
  "color": {"field": "2024Country", "type": "nominal", "legend":{
      "title": "Country of Origin",
      "titleFont": "Arial",
      "titleFontSize": 14,
      "labelFont": "Arial",
      "labelFontSize": 10}
  },
  "tooltip": [
      {"field": "2024Country", "type": "nominal", "title": "Country"},
      {"field": "2024Share", "type": "quantitative", "title": "% of Total Sales"}
    ]
  }
    }
  ]
}