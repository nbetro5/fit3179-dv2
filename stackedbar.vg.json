{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {"url": //data source goes here},
  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "date",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative"
    },
    "color": {
      "field": "weather",
      "type": "nominal",
      "scale": {
        "domain": ["EV", "Hybrid", "ICE"],
        "range": [//colors go here]
      },
      "title": "Vehicle Sales by Powerplant"
    }
  }
}