{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text": "Sales by Powerplant"},
  "width": 600,
  "height": 600,
  "data": {"url": "https://raw.githubusercontent.com/nbetro5/fit3179-dv2/main/pplanttest.csv", "format": {"type": "csv"}},
  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "Proportion",
      "type": "quantitative",
      "title": "Share of Sales"
    },
    "color": {
      "field": "Powerplant",
      "type": "nominal",
      "scale": {
        "domain": ["EV", "Hybrid", "ICE"],
        "range": ["#a6cee3","#1f78b4","#b2df8a"]
      }
    }
  }
}